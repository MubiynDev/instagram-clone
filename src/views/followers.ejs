<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/followers.css">
    <title>followers</title>
</head>
<body>
    
    <div class="container">
        <div class="row bootstrap snippets bootdey">
            <div class="col-md-8 col-xs-12">
              <div class="panel" id="followers">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <i class="icon md-check" aria-hidden="true"></i> Followers
                  </h3>
                </div>
                <div class="panel-body">
                  <ul class="list-group list-group-dividered list-group-full">
                    <% followers[0].followers.forEach(follower => { %>
                        <li class="list-group-item">
                            <div class="media">
                              <div class="media-left">
                                <a class="avatar avatar-online" href="users/<%=follower.username%>">
                                  <img src="<%=follower.avatar%> " alt="">
                                  <i></i>
                                </a>
                              </div>
                              <div class="media-body">
                                <div class="pull-right">
                                  <button type="button" class="btn btn-info btn-sm waves-effect waves-light"><a href="/users/<%=follower.username%>/follow">Follow</a></button>
                                </div>
                                <div><a class="name" href="/users/<%=follower.username%>"><%=follower.fullName %> </a></div>
                                <small>@<%=follower.username%></small>
                              </div>
                            </div>
                          </li>
                    <% }) %>  
                  </ul>
                </div>
              </div>
            </div>
        </div>
        </div>
</body>
</html>